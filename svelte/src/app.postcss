/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

#svelte {
	@apply h-screen w-screen overflow-hidden;
}
* {
	font-family: "Montserrat";
}

h1,h2,h3,h4,h5,h6 {
	@apply font-bold;
}

button {
	@apply text-gray-100 bg-primary-500 hover:bg-primary-600 active:bg-primary-700;
}